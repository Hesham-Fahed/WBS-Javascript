<div>
    Add post

  <form method="POST" action="{{ basePath }}/posts">

    {{ csrf_field|raw }}
    
    <input type="text" name="title" placeholder="Message title." value="{{ fields.title }}">
    <textarea rows="2" name="content" placeholder="Your message here.">{{ fields.content }}</textarea>
    <button type="submit">Submit</button>
  </form>

</div>